<?xml version="1.0"?>
<addon scheme="3.0">
    <id>ee_change_onesummer</id>
    <version>1.1.6</version>
    <status>active</status>
    <auto_install>MULTIVENDOR,ULTIMATE</auto_install>
    <default_language>ru</default_language>

    <has_icon>Y</has_icon>
    <supplier>Евгений Ефимченко</supplier>
    <supplier_link>https://efimchenko.ru</supplier_link>

    <settings layout="separate" edition_type="ROOT,ULT:VENDOR">
        <sections>
            <section id="general">
                <items>
                    <item id="ee_change_onesummer_active">                      
                        <type>checkbox</type>
						<default_value>Y</default_value>
                    </item>
                </items>
            </section>
            <section id="promo">
                <items>
					<item id="information">
					   <type>info</type>
					   <handler>fn_ee_change_onesummer_information</handler>
					</item>                
                    <item id="ee_change_onesummer_promo_top_act">                      
                        <type>checkbox</type>
						<default_value>N</default_value>
                    </item>
                    <item id="ee_change_onesummer_promo_top_text">                      
                        <type>input</type>
						<default_value><a href="https://onesummer.ru/trendy/minimalizm/">Украшения в стиле минимализм</a></default_value>
                    </item>
                    <item id="ee_change_onesummer_promo_top_backcolor">                      
                        <type>input</type>
						<default_value>#edabab</default_value>
                    </item>
                    <item id="ee_change_onesummer_promo_top_bordercolor">                      
                        <type>input</type>
						<default_value>#edabab</default_value>
                    </item>                    
                    <item id="ee_change_onesummer_promo_top_color">                      
                        <type>input</type>
						<default_value>#000000</default_value>
                    </item>                    
                </items>
            </section>            
        </sections>
    </settings>

    <functions>
        <item for="install">fn_ee_change_onesummer_install</item>
        <item for="uninstall">fn_ee_change_onesummer_uninstall</item>
    </functions>
</addon>
